<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.mobiclub.quantoprima.ui.activity.QRCodeActivityMock"
    android:background="@drawable/t06_leitura_offline_overlay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qrcode_label_no_connection_status"
        android:id="@+id/label_connection_status"
        android:textColor="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        style="@style/Text.Medium"
        android:textSize="20sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/qrcode_label_qrcode_message"
        android:id="@+id/label_qrcode_message"
        android:textColor="@color/white"
        style="@style/Text.Medium"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:id="@+id/button"
        android:textSize="30sp"
        android:onClick="onReadCode"
        android:layout_centerInParent="true" />
</RelativeLayout>