<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.RescueRewardFragment"
    android:background="@drawable/bgazul">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:background="@color/yellow7"
        style="@style/Text.Regular">

        <br.com.mobiclub.quantoprima.ui.view.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rescue_reward_label_rescue_message"
            android:id="@+id/label_rescue_message"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextBold"
            android:textSize="16sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_reward">

        <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/list_tem_reward" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <br.com.mobiclub.quantoprima.ui.view.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/rescue_reward_label_code_message"
            android:id="@+id/textView"
            android:layout_gravity="center"
            style="@style/Text"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="40dp">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_code"
                android:textColor="@color/white"
                style="@style/TextBold"
                android:textSize="18sp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:paddingRight="30dp" />

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/label_time"
                style="@style/Text"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="00/00/0000 16:34" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/yellow8">

        <br.com.mobiclub.quantoprima.ui.view.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Resgatar sua recompensa Ã© simples:"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            style="@style/PrincipalBlackTextBold"
            android:textSize="16sp"
            android:textColor="@color/theme_principal"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:layout_marginBottom="9dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingRight="6dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@drawable/t12_2_numero1" />
                </FrameLayout>

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rescue_reward_tip1"
                    android:id="@+id/textView5"
                    style="@style/Text"
                    android:textColor="@color/grey7"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_price">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingRight="6dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:src="@drawable/t12_2_numero2" />
                </FrameLayout>

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textColor="@color/grey7"
                    android:text="@string/rescue_reward_tip2"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingRight="6dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView5"
                        android:src="@drawable/t12_2_numero3" />
                </FrameLayout>

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textColor="@color/grey7"
                    android:text="@string/rescue_reward_tip3"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp">

        <br.com.mobiclub.quantoprima.ui.view.CustomButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_rescue"
            android:onClick="onRescue"
            android:background="@drawable/btn_resgatar_recompensa_laranja"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/rescue_reward_btn_rescue"
            android:gravity="center"
            style="@style/PrincipalBlackTextBold"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
