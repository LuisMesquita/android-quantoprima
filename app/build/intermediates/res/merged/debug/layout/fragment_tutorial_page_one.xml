<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:layout_width="207dp"
        android:layout_height="112dp"
        android:id="@+id/btn_skip_tutorial"
        android:layout_gravity="right"
        android:onClick="onSkipTutorial"
        android:background="@color/transparent" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/t19_tutorial_1"
        android:adjustViewBounds="true"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_question_selected" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_question" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_question" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:background="@drawable/circle_question" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="right|top"
        android:src="@drawable/t19_btn_pular"
        android:layout_margin="10dp" />
</FrameLayout>