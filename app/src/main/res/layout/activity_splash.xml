<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgazul">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:id="@+id/lytLogo"
        android:gravity="center">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/marca1"
            android:layout_gravity="center" />
    </LinearLayout>

    <br.com.mobiclub.quantoprima.ui.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_label_loading"
        android:id="@+id/label_loading"
        style="@style/PrincipalTextBold"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/lytLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <br.com.mobiclub.quantoprima.ui.view.CustomTextView
        style="@style/PrincipalTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_things"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/label_loading"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
