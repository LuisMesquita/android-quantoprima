<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgamarelo_losangos">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <include
            layout="@layout/location_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:background="@color/header_extract">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_mobis_to_expire"
                android:text="@string/store_user_mobis_label_mobis_to_expire"
                style="@style/UserMobisLabelHeader" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:id="@+id/label_mobis_to_expire_message"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/grey16"
                style="@style/Text"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:minLines="1"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/extract_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2dp" />

</LinearLayout>