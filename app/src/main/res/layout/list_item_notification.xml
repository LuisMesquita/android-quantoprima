<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/image_bullet"
                android:src="@drawable/t14_mensagem_naolida_marcador"
                android:layout_gravity="top" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top">

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:id="@+id/label_reference"
                    style="@style/Notification.Title"
                    android:paddingRight="10dp" />

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_time"
                    style="@style/Notification.Time" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_logo"
                android:layout_toLeftOf="@+id/lyt_price"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="9dp">

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Medium Text"
                    android:id="@+id/label_title"
                    android:layout_weight="1"
                    android:singleLine="true"
                    style="@style/PrincipalBlackTextBold"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_content"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    style="@style/Text"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:minLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_excluir"
            android:id="@+id/imgBtExcluir"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/divider"
        android:background="#C8C7CC"
        android:layout_marginLeft="28dp" />

</LinearLayout>