<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_extract"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="@color/header_extract">

        <br.com.mobiclub.quantoprima.ui.view.CustomTextView
            android:id="@+id/label_mobis_extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_user_mobis_label_mobis_extract"
            android:layout_gravity="center_vertical"
            style="@style/UserMobisLabelHeader" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_legend"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/grey15"
        android:layout_gravity="center"
        android:gravity="center">

        <br.com.mobiclub.quantoprima.ui.view.CustomTextView
            android:id="@+id/label_expiring_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_user_mobis_label_expiring_legend"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            style="@style/TextBold"
            android:textColor="@color/grey16" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/legend_expired"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_mobis_label_legend_expired"
                style="@style/TextBold"
                android:id="@+id/label_legend_expired"
                android:layout_gravity="center_vertical"
                android:textColor="@color/expired"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/legend_used"
            android:layout_gravity="center_vertical"
            android:id="@+id/frameLayout2"
            android:layout_marginLeft="8dp">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_mobis_label_legend_used"
                android:id="@+id/label_legend_used"
                android:layout_gravity="center_vertical"
                style="@style/TextBold"
                android:textColor="@color/used"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/legend_win"
            android:layout_gravity="center_vertical"
            android:id="@+id/frameLayout"
            android:layout_marginLeft="8dp">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_mobis_label_legend_win"
                android:id="@+id/label_win"
                android:layout_gravity="center_vertical"
                style="@style/TextBold"
                android:textColor="@color/win"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label_month_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elementum/1111"
                android:textSize="14sp"
                android:textColor="@color/grey16"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/frame_expired"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/legend_expired"
                android:layout_weight="1">

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:id="@+id/label_mobis_expired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-00"
                    style="@style/TextBold"
                    android:textColor="@color/expired"
                    android:textSize="14sp"
                    android:layout_gravity="top"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_used"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/legend_used"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:id="@+id/label_mobis_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-00"
                    style="@style/TextBold"
                    android:textSize="14sp"
                    android:textColor="@color/used"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_win"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/legend_win"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">

                <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                    android:id="@+id/label_mobis_win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+00"
                    style="@style/TextBold"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/win"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>