<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:visibility="visible"
    tools:showIn="@layout/list_item_reward"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:background="@color/item_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image_reward"
            android:layout_width="76dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:id="@+id/label_name"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                style="@style/PrincipalBlackTextBold"
                android:text="Medium Text"
                android:layout_weight="1"
                android:singleLine="true" />

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:id="@+id/label_establishment"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                style="@style/TextMedium"
                android:text="Medium Text"
                android:textColor="@color/yellow3"
                android:layout_weight="1"
                android:singleLine="true" />

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:id="@+id/label_expiration"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="13sp"
                style="@style/Text"
                android:text="@string/list_item_reward_label_expiration"
                android:textColor="@color/yellow4"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="8dip" />
</FrameLayout>