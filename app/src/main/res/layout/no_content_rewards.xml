<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgazul">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/t13_img_recompensas_vazia"
        android:layout_marginTop="33dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <br.com.mobiclub.quantoprima.ui.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_content_rewards_label_message"
            android:id="@+id/label_message"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            style="@style/PrincipalTextBold"
            android:textSize="16sp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp" />

        <br.com.mobiclub.quantoprima.ui.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_help"
            android:layout_gravity="center_horizontal"
            style="@style/PrincipalTextRegular"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:text="@string/no_content_rewards_label_help"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center|bottom"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/t13_ic_help" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:id="@+id/label_how_to_reward"
            android:layout_height="wrap_content">

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_content_rewards_label_how_to_gain_mobi"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="2dp"
                style="@style/PrincipalTextBold"
                android:textSize="14sp"
                android:gravity="left" />

            <br.com.mobiclub.quantoprima.ui.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_content_rewards_label_how_to_gain_mobi2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                style="@style/PrincipalTextBold"
                android:textSize="14sp"
                android:gravity="left" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>